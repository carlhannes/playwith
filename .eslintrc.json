{
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "extends": "airbnb/base",
    "rules": {
      "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
      "no-plusplus": 0,
      "comma-dangle": [2, "never"],
      "curly": [2, "all"],
      "max-len": 0,
      "no-param-reassign": 0
    }
  }